<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title><%= title %></title>
        <link rel="stylesheet" href="./bootstrap/dist/css/bootstrap.css" />
        <script src="./jquery/dist/jquery.js"></script>
        <script src="./bootstrap/dist/js/bootstrap.js"></script>
    </head>
    <body>
        <div class="container">
            <% include ./partials/navBar %>
            <div class="panel panel-primary">
                <div class = "panel-heading">
                    <h3 class = "panel-title">Orders Online</h3>
                </div>
                <div>
                    <form class="form-inline" name="frmFilter" action="orderlist" method="POST">
                        <input type="text" name="phone" class="form-control" placeholder="Search for phone..." required>
                        <input type="text" name="address" class="form-control" placeholder="Search for address..">
                        <input type="submit" class="btn btn-default" value="Filter" />
                    </form>
                </div>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr class="success">
                            <th>Order Number</th>
                            <th>Customer Name</th>
                            <th>Phone Number</th>
                            <th>Order Date</th>
                            <th>Order Expected Date</th>
                            <th>Items Quantity</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(function(order) { %>
                            <tr>
                                <td><%= order.OrderID%></td>
                                <td>Mr(s) <%= order.CustomerLastName%></td>
                                <td><%= order.CustomerPhone%></td>
                                <td><%= order.OrderDate%></td>
                                <td><%= order.OrderExpectedDate%></td>
                                <td><%= order.OrderItems.length%></td>
                                <td>Processing</td>
                            </tr>
                        <% })%>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>